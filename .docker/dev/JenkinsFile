pipeline {
    agent any
    // parameters {

    // }
    stages {
        stage('Cleanup') {
            steps {
                echo 'Cleaning up..'
            }
        }
        stage ('Prepare') {
            steps {
                script {
                    echo 'Preparing..'
                }
            }
        }
        stage('Build') {
            steps {
                script {
                    echo 'Building..'
                    sh 'dotnet restore ./InnovateFuture.sln' // restore nuget packages
                    // build entity framework
                    sh 'dotnet ef database update --project "./src/InnovateFuture.Infrastructure/InnovateFuture.Infrastructure.csproj" --startup-project "./src/InnovateFuture.Api/InnovateFuture.Api.csproj" --connection "Server=postgres;Database=InnovateFuture;User=admin;Password=root"'
                    dir('src/InnovateFuture.Api/') {
                        sh 'dotnet build "InnovateFuture.Api.csproj" -c Release -o ./app/build'
                        sh 'dotnet publish "InnovateFuture.Api.csproj" -c Release -o ./app/publish'
                    }
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    echo 'Testing..'
                    dir('Server/src/') {
                        sh 'dotnet test'
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}